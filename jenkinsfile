pipeline {
    agent { label 'UBUNTU_NODE1_JAVA' }
    triggers { pollSCM('H/5 * * * *') }
    parameters { choice(name: 'maven_prmt', chioces: ['install', 'package'], description: 'testing') }
    stages{
        stage(vcn) {
            steps {
                git url: 'https://github.com/wakaleo/game-of-life.git'
                    branch: 'declarative'
            }
        }
        stage(package) {
            tool { 
               jdk 'JDK_8'
            }
            steps {
                sh "mvn ${params.maven_prmt}"
            }
        }
        stage(postbuild) {
            steps {
                archiveArtifacts artifacts: '**/target/gameoflife.war',
                                 onlyIfSuccessful: true
                junit testResults: '**/surefire-reports/TEST-*.xml'
            }
        }
        post {
        success {
            mail subject: "Jenkins Build of ${JOB_NAME} with id ${BUILD_ID} is success",
                body: "Use this URL ${BUILD_URL} for more info",
                to: 'deepanmerd@gmail.com'
            }
        }
    }
}